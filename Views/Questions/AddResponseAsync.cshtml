@model Models.EntityModels.Response
@using Models.EntityModels
@{
    ViewData["Title"] = "AddResponseAsync";
}


<h1>Add Response</h1>

<h4>Response</h4>
<hr />
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="col-md-4">
                    <div class="col-md-7">
                        <form asp-action="AddResponsePost">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsEnd" />Is It End Response
                                </label>
                            </div>
                            <div class="form-group">
                                <label asp-for="NextQuestion" class="control-label"></label>
                                <select asp-for="NextQuestion" class="form-control">
                                    <option>null</option>
                                    @foreach (var item in ViewData["Questions"] as List<Question>)
                                    {
                                        <option value="@item.Id">@item.Description</option>
                                    }
                                </select>
                                <span asp-validation-for="NextQuestion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="hidden" asp-for="QuestionId" value="@ViewData["Id"]" class="form-control" />

                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsMetadataRequired" /> Is Meta dataRequired
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsFillableByClient" />Is Response Fillable
                                </label>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
                </div>
            </div>
        </div>
    </div>

                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
